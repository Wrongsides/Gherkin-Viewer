{
  "name": "Gherkin Viewer",
  "version": "0.0.5",
  "manifest_version": 2,
  "description": "Gherkin syntax highlighter for viewing cucumber feature files.",
  "short_name": "GherkView",
  "homepage_url": "http://uk.linkedin.com/pub/john-byrne/22/9a9/36",
  "icons": {
    "16": "icons/gherkin16.png",
    "48": "icons/gherkin48.png",
    "128": "icons/gherkin128.png"
  },
  "permissions": [
    "contentSettings",
    "http://*/*.feature",
    "https://*/*.feature",
	"http://*/*.feature?*",
	"https://*/*.feature?*"
  ],
  "content_scripts": [
    {
      "matches": [
        "file://*/*.feature",
        "http://*/*.feature",
        "https://*/*.feature",
		"file://*/*.feature?*",
        "http://*/*.feature?*",
        "https://*/*.feature?*"
      ],
      "js": [
        "src/inject/inject.js"
         ],
       "css": [
         "css/gherkin.css"
       ]
    }
  ]
}